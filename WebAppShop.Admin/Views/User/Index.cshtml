@model List<UserViewModel>

@{
    ViewData["Title"] = "Index";
}

<div class="container-fluid px-4">
    <h1 class="mt-4">Danh sách User</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a href="/">Trang chủ</a></li>
        <li class="breadcrumb-item active">Danh sách User</li>
    </ol>
    <div class="text-success" asp-for="@ViewBag.SuccessMsg"></div>
    <div class="card mb-4">
        <div class="card-body">
            <a class="btn btn-success" asp-action="Register" asp-controller="User">Tạo mới</a>
        </div>
    </div>
    <div class="card mb-4">
        <div class="card-header">
            <i class="fas fa-table me-1"></i>
            DataTable
        </div>
        <div class="card-body">
            <table id="datatablesSimple">
                <thead>
                    <tr>
                        <th>Tên</th>
                        <th>Họ</th>
                        <th>Số điện thoại</th>
                        <th>Tài khoản</th>
                        <th>Email</th>
                        <th>Ngày sinh</th>
                        <th></th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>Tên</th>
                        <th>Họ</th>
                        <th>Số điện thoại</th>
                        <th>Tài khoản</th>
                        <th>Email</th>
                        <th>Ngày sinh</th>
                        <th></th>
                    </tr>
                </tfoot>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.FirstName)</td>
                            <td>@Html.DisplayFor(modelItem => item.LastName)</td>
                            <td>@Html.DisplayFor(modelItem => item.PhoneNumber)</td>
                            <td>@Html.DisplayFor(modelItem => item.UserName)</td>
                            <td>@Html.DisplayFor(modelItem => item.Email)</td>
                            <td>@Html.DisplayFor(modelItem => item.Dob)</td>
                            <td>
                                @Html.ActionLink("Sửa", "Edit", "User", new { id = item.Id }, new { @class = "btn btn-warning" })
                                @Html.ActionLink("Xem", "Details", "User", new { id = item.Id }, new { @class = "btn btn-info" })
                                @Html.ActionLink("Xóa", "Delete", "User", new { id = item.Id }, new { @class = "btn btn-danger" })
                                @Html.ActionLink("Gán quyền", "RoleAssign", "User", new { id = item.Id }, new { @class = "btn btn-dark" })
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

            <form action="Delete" method="post">

            </form>
            <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModalCenter">
                Launch demo modal
            </button>

            <!-- Modal -->
            <div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
                <div class="modal-dialog modal-dialog-centered" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="exampleModalCenterTitle">Modal title</h5>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            ...
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                            <button type="button" class="btn btn-primary">Save changes</button>
                        </div>
                    </div>
                </div>
            </div>



        </div>
    </div>
</div>